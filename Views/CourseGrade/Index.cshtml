     $(document).ready(function () {
        cargarListado();

        $("#btnGuardar").click(function () {
            if ($("#inputId").val() == "0")
          

                saveCourseGrade();
            else
                editCourseGrade();
        });

        $("#myModal").on('hide.bs.modal', function () {
            $('#inputId').val("0");
            document.getElementById("formCourseGrade").reset();
        });


     });



</script>


